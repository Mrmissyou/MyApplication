<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
     <!-- 标题 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_grey"
        >
        <FrameLayout 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/backlayout_"
            >
            <ImageView 
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_back"
                android:layout_gravity="center"
                />
        </FrameLayout>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/bankcan" 
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="银行限额"
            android:gravity="center_vertical"
             android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingRight="10dp"
            />
    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入"
                android:textSize="12sp"
                android:textColor="#A6A6A6"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="碳银宝3期"
                 android:textSize="12sp"
                android:textColor="#A6A6A6"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余可购金额 "
                 android:textSize="12sp"
                android:textColor="#A6A6A6"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="223,450,600 "
                 android:textSize="12sp"
                android:textColor="#EE4E42"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元 "
                 android:textSize="12sp"
                android:textColor="#A6A6A6"
                />
        </LinearLayout>
        
    </LinearLayout>
    
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="金额"
            android:gravity="center_vertical"
            />
        <EditText 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入金额"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="元"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    <View 
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <LinearLayout 
        android:id="@+id/changebank"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="付款"
            android:gravity="center_vertical"
            />
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="招商银行(尾号9970)"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        
        <ImageView 
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:src="@drawable/img_refresh_arrow"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="本卡最多可转入"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#A6A6A6"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="50,000"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textColor="#EE4E42"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="元，大额购买请移驾PC端"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#A6A6A6"
            />
    </LinearLayout>
    
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"
	    android:background="@color/white"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="红包"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_marginLeft="10dp" 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="50"
                android:gravity="center_vertical"
                />
            
            <ImageView 
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:src="@drawable/img_refresh_arrow"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        
        <View 
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/divider_grey"  
          />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="加息"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_marginLeft="10dp" 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1%"
                android:gravity="center_vertical"
                />
            
            <ImageView 
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:src="@drawable/img_refresh_arrow"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="实际支付金额为"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:gravity="center_vertical"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="49,950 "
            android:textColor="#EE4E42"
            android:textSize="12sp"
            android:gravity="center_vertical"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="元，预期收益为"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:gravity="center_vertical"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1.285 "
            android:textColor="#EE4E42"
            android:textSize="12sp"
            android:gravity="center_vertical"
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="元"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        >
        <ImageView 
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/img_read"
            android:layout_gravity="center_vertical"
            />
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="阅读并同意"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="《壹投行服务协议》"
            android:textColor="#EE4E42"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/buyingbtn" 
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:text="立即购买"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_red_corner_border"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="到期本金收益自动自动归还至账户余额"
             android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:layout_below="@id/buyingbtn"
            />
        
    </RelativeLayout>
    
    
    
    

</LinearLayout>
