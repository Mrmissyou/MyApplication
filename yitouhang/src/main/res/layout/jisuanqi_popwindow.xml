<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kefu_bg"
    android:gravity="center"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:background="@drawable/popwindow_bg"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/tv" 
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:text="计算收益"
                android:textSize="16dp"
                android:gravity="center"
                />
            <ImageView 
                android:id="@+id/imgs_concel"
                android:layout_toRightOf="@+id/tv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/divider_grey"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        
        <View 
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/divider_grey"
          />
        <!-- 计算器输入框 -->
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            >
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="40dp"
		            android:orientation="horizontal"
		            >
		            <LinearLayout 
		                android:layout_width="0dp"
		                android:layout_height="match_parent"
		                android:orientation="horizontal"
		                android:layout_weight="2"
		                android:background="@drawable/changepaypswd_edittext_bg"
		                >
		                <EditText
		                	android:id="@+id/toumoney" 
		                	android:layout_width="0dp"
		                	android:layout_weight="4"
		               	 	android:layout_height="match_parent"
		                	android:hint="投资金额"
		                    android:gravity="center"
		                    android:background="@null"
		                    android:textSize="13dp"
		                    android:inputType="number"
		                	/>
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:text="元"
			                android:gravity="center"
			                android:paddingRight="5dp"
			                />
		            </LinearLayout>
		            
		            <LinearLayout 
		                android:layout_marginLeft="10dp"
		                android:layout_width="0dp"
		                android:layout_height="match_parent"
		                android:orientation="horizontal"
		                android:layout_weight="1"
		                android:background="@drawable/changepaypswd_edittext_bg"
		                >
		                <EditText 
		                	android:id="@+id/touday"
		                	android:layout_width="0dp"
		                	android:layout_weight="4"
		                 	android:inputType="number"
		                	android:layout_height="match_parent"
		                	android:hint="投资天数"
		                	android:background="@null"
		                	android:textSize="13dp"
		                 	android:gravity="center"
		                	/>
			            <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="match_parent"
			                android:text="天"
			                android:gravity="center"
			                android:paddingRight="5dp"
			                />
		            </LinearLayout>
		             
		        </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout 
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预估收益（元）"
                android:gravity="center_vertical"
                />
            <TextView 
                android:id="@+id/comfit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.0"
                android:textSize="17dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="#FF0000"
                />
            
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
