<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    <!-- 标题部分 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_grey"
        >
        <FrameLayout
            android:id="@+id/backlayout" 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            >
            <ImageView 
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/img_back"
                android:layout_gravity="center"
                />
        </FrameLayout>
        
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
           	 android:layout_centerInParent="true"
             android:text="切换账号"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="17dp"
             />
        
        <TextView
            android:id="@+id/registBtn" 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="注册"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:gravity="center"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        >
        <ImageView 
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:background="@color/divider_grey"
            />
    </RelativeLayout>
    
     <!-- 手机号码 -->
    <RelativeLayout
        android:layout_marginTop="20dp" 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView 
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="手机号"
            android:gravity="center"
            />
        <EditText
           android:layout_toRightOf="@+id/tv1" 
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:hint="请输入手机号" 
           android:gravity="center"
           android:background="@null"
           android:textSize="12dp"
           android:layout_marginLeft="5dp"
           />
    </RelativeLayout>
    
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      android:layout_marginLeft="23dp"
      />
     <!-- 密码 -->
     
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView 
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="密   码"
            android:gravity="center"
            />
        <EditText
           android:layout_toRightOf="@+id/tv4" 
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:hint="请输入密码" 
           android:gravity="center"
           android:background="@null"
           android:textSize="12dp"
           android:layout_marginLeft="5dp"
           />
        <ImageView 
           android:layout_width="16dp"
           android:layout_height="16dp"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:background="@color/divider_grey"
           android:layout_centerVertical="true"
           />
    </RelativeLayout>
     
     <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      android:layout_marginLeft="23dp"
      />
    
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         >
         <TextView
            android:id="@+id/completeBtn" 
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:text="登录"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:background="@drawable/button_red_corner_border" 
            />
         
         <TextView
            android:id="@+id/findpswd"
            android:layout_marginTop="20dp" 
            android:layout_below="@id/completeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="14dp"
            android:textColor="@color/divider_grey"
            android:layout_centerHorizontal="true"
            />
         
         
	</RelativeLayout>
</LinearLayout>
