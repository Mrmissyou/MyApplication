<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_grey"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	 <include 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/white_title_head_layout"/>
    
     <RelativeLayout 
         android:layout_marginTop="3dp"
         android:layout_width="match_parent"
         android:layout_height="88dp"
         android:background="@color/white"
         >
         <ImageView
             android:id="@+id/imgs1"
             android:layout_width="28dp"
             android:layout_height="28dp"
             android:background="@drawable/corners_border"
             android:layout_marginLeft="60dp"
             android:layout_marginTop="18dp"
             />
         <View
             android:id="@+id/view1" 
             android:layout_marginTop="32dp"
             android:layout_toRightOf="@+id/imgs1"
             android:layout_width="80dp"
             android:layout_height="1dp"
             android:background="@color/divider_grey"
             />
          <ImageView
             android:id="@+id/imgs2"
             android:layout_width="28dp"
             android:layout_height="28dp"
             android:background="@drawable/corners_border"
             android:layout_marginTop="18dp"
             android:layout_centerHorizontal="true"
             />
         <View
             android:id="@+id/view2" 
             android:layout_marginTop="32dp"
             android:layout_toRightOf="@+id/imgs2"
             android:layout_width="80dp"
             android:layout_height="1dp"
             android:background="@color/divider_grey"
             />
         <ImageView
             android:id="@+id/imgs3"
             android:layout_width="28dp"
             android:layout_height="28dp"
             android:background="@drawable/corners_border"
             android:layout_marginTop="18dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="60dp"
             />

         <TextView
             android:id="@+id/completemessage"
             android:layout_marginTop="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/imgs1"
             android:layout_toLeftOf="@+id/setpassword"
             android:layout_marginRight="40dp"
             android:text="完善个人信息"
             android:textSize="11dp" />
         
         <TextView 
             android:id="@+id/setpassword"
             android:layout_marginTop="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="设置支付密码"
             android:textSize="11dp"
             android:layout_below="@+id/imgs2"
             android:layout_centerHorizontal="true"
             />
         
         <TextView
             android:id="@+id/bandcard" 
             android:layout_toRightOf="@+id/setpassword"
             android:layout_marginLeft="50dp"
             android:layout_marginTop="5dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="绑定银行卡"
             android:textSize="11dp"
             android:layout_below="@+id/imgs3"
             />
     </RelativeLayout>
     <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
     
     
     
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:text="为保证同卡进出，请绑定一张本人银行卡"
         android:textSize="12dp"
         android:textColor="@color/divider_grey"
         android:layout_marginLeft="23dp"
         android:gravity="center_vertical"
         />
     <!-- 持卡人和卡号 -->
     <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    	 <LinearLayout 
        	 android:layout_width="match_parent"
       	 	 android:layout_height="87dp"
        	 android:background="@color/white"
        	 android:orientation="vertical">
    	     	<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="43dp"
			        >
			         <TextView
			            android:id="@+id/tv"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center"
			            android:paddingLeft="23dp"
			            android:text="持卡人"
			            android:textSize="14dp" />
			        <EditText
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_marginLeft="10dp"
			            android:layout_toRightOf="@+id/tv"
			            android:background="@null"
			            android:gravity="center"
			            android:hint="张凯"
			            android:textSize="14dp" >
			            <requestFocus />
			        </EditText>
    	     	    
    	       </RelativeLayout>
    	     
    	     	  <View
             		 android:id="@+id/view2" 
            		 android:layout_toRightOf="@+id/imgs2"
            		 android:layout_width="match_parent"
            		 android:layout_height="1dp"
            		 android:layout_marginLeft="23dp"
           			 android:background="@color/divider_grey"
            		 />
		     	<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="43dp"
			        >
			        <TextView
			            android:id="@+id/tv3"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center"
			            android:paddingLeft="23dp"
			            android:text="卡   号"
			            android:textSize="14dp" />
			        <EditText
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_marginLeft="10dp"
			            android:layout_toRightOf="@+id/tv3"
			            android:background="@null"
			            android:gravity="center"
			            android:hint="输入卡号"
			            android:textSize="14dp" >
			            <requestFocus />
			        </EditText>
			        
			        <ImageView 
			            android:layout_width="16dp"
			            android:layout_height="16dp"
			            android:layout_alignParentRight="true"
			            android:background="@drawable/corners_border"
			            android:layout_centerVertical="true"
			            android:layout_marginRight="27dp"
			            />
			    </RelativeLayout>
		  </LinearLayout>
	     <View 
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:background="@color/divider_grey"  
	       />
    	 
    	  <TextView 
         	android:layout_width="match_parent"
         	android:layout_height="40dp"
         	android:text="请输入银行预留手机号"
         	android:textSize="12dp"
         	android:textColor="@color/divider_grey"
         	android:layout_marginLeft="23dp"
         	android:gravity="center_vertical"
        	 />
    	 <!-- 手机号和验证码 -->
	    	 <View 
	       		android:layout_width="match_parent"
	      		 android:layout_height="1dp"
	      		 android:background="@color/divider_grey"  
	       		/>
    	 
    	  <LinearLayout 
        	 android:layout_width="match_parent"
       	 	 android:layout_height="87dp"
        	 android:background="@color/white"
        	 android:orientation="vertical">
    	     	<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="43dp"
			        >
			         <TextView
			            android:id="@+id/tv4"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center"
			            android:paddingLeft="23dp"
			            android:text="手机号"
			            android:textSize="14dp" />
			        <EditText
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_marginLeft="10dp"
			            android:layout_toRightOf="@+id/tv4"
			            android:background="@null"
			            android:gravity="center"
			            android:hint="手机号码"
			            android:textSize="14dp" >
			            <requestFocus />
			        </EditText>
    	     	    
    	       </RelativeLayout>
    	     
    	     	  <View
             		 android:id="@+id/view3" 
            		 android:layout_width="match_parent"
            		 android:layout_height="1dp"
            		 android:layout_marginLeft="23dp"
           			 android:background="@color/divider_grey"
            		 />
		     	<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="43dp"
			        >
			        <TextView
			            android:id="@+id/tv5"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center"
			            android:paddingLeft="23dp"
			            android:text="验证码"
			            android:textSize="14dp" />
			        <EditText
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_marginLeft="10dp"
			            android:layout_toRightOf="@+id/tv5"
			            android:background="@null"
			            android:gravity="center"
			            android:hint="输入验证码"
			            android:textSize="14dp" >
			            <requestFocus />
			        </EditText>
			        
			        <TextView 
			            android:layout_width="90dp"
			            android:layout_height="match_parent"
			            android:text="获取验证码"
			            android:textSize="12dp"
			            android:gravity="center"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:paddingRight="27dp"
			            />
			    </RelativeLayout>
		  </LinearLayout>
		  <View 
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:background="@color/divider_grey"  
	       />
    	  
    	  
    	 <!-- 服务协议 -->
    	  <RelativeLayout 
         	android:layout_width="match_parent"
         	android:layout_height="wrap_content"
         	android:layout_marginTop="20dp"
         	android:layout_marginLeft="23dp"
        	 >
		         <ImageView
		             android:id="@+id/toggle" 
		             android:layout_width="12dp"
		             android:layout_height="12dp"
		             android:src="@drawable/img_read"
		             android:layout_centerVertical="true"
		             />
		         <TextView 
		             android:id="@+id/toggle_tv"
		             android:layout_width="wrap_content"
		             android:layout_height="15dp"
		             android:layout_toRightOf="@+id/toggle"
		             android:text="阅读并同意"
		             android:textSize="12dp"
		             android:layout_marginLeft="5dp"
		             />
		         <TextView 
		             android:layout_width="wrap_content"
		             android:layout_height="15dp"
		             android:layout_toRightOf="@+id/toggle_tv"
		             android:text="《壹投行服务协议》"
		             android:textSize="12dp"
		             android:textColor="@color/light_green"
		             />
     	</RelativeLayout>
    	  
      <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:gravity="center"
         >
         <TextView
             android:layout_marginTop="50dp"
             android:id="@+id/fininsh" 
             android:layout_width="288dp"
             android:layout_height="40dp"
             android:gravity="center"
             android:textSize="16dp"
             android:text="完成"
             android:textColor="@color/white"
             android:background="@drawable/button_red_corner_border"
             />
     </RelativeLayout>
     
     
     
</LinearLayout>
