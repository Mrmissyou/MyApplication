<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    <!-- 百分比等 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#EE4E42"
        >
        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—— 预期年化收益率 ——"
            android:textSize="13dp"
            android:textColor="@color/white"
            />
        <RelativeLayout 
            android:layout_below="@id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/tv2" 
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="7.8"
                android:textSize="28dp"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView 
                android:layout_toRightOf="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="%"
                android:textColor="@color/white"
                android:layout_alignBaseline="@id/tv2"
                />
        </RelativeLayout>
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EE4E42"
        android:orientation="horizontal"
        >
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            >
            <TextView 
                android:id="@+id/tv3"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨日收益(元)"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                />
            <TextView 
                android:layout_below="@id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        
        <View 
          android:layout_width="1dp"
          android:layout_height="match_parent" 
          android:background="@color/white"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="12dp" 
          />
        
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            >
            <TextView 
                android:id="@+id/tv4"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计收益(元)"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                />
            <TextView 
                android:layout_below="@id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        
        <View 
          android:layout_width="1dp"
          android:layout_height="match_parent" 
          android:background="@color/white"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="12dp" 
          />
        
        <RelativeLayout 
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            >
            <TextView 
                android:id="@+id/tv0"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持有金额(元)"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                />
            <TextView 
                android:layout_below="@id/tv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>
    
    <!-- 产品详情 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="vertical"
        android:paddingLeft="26dp"
        android:background="@color/white"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
               android:id="@+id/tv5" 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="产品详情"
               android:textSize="16dp"
               android:gravity="center"
               />
            <ImageView
                android:id="@+id/img" 
                android:layout_width="44dp"
                android:layout_height="22dp"
                android:background="@color/divider_grey"
                android:layout_toRightOf="@+id/tv5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:layout_width="44dp"
                android:layout_height="22dp"
                android:background="@color/divider_grey"
                android:layout_toRightOf="@+id/img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
        </RelativeLayout>
        
        <View 
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/divider_grey"  
          />
        <!-- 剩余份额  等-->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv7" 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="剩余额份"
                    android:gravity="center"
                    android:textColor="#A6A6A6"
                    />
                <TextView 
                    android:id="@+id/text2"
                    android:layout_toRightOf="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1,800,000"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    />
                 <TextView
                    android:layout_toRightOf="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="元"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="#A6A6A6"
                    />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv8" 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="起息时间"
                    android:gravity="center"
                    android:textColor="#A6A6A6"
                    />
                <TextView 
                    android:layout_toRightOf="@+id/tv8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="投资次日凌晨开始"
                    android:gravity="center"
                    android:textColor="#A6A6A6"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    />
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv9" 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="转出速度"
                    android:gravity="center"
                    android:textColor="#A6A6A6"
                    />
                <TextView 
                    android:layout_toRightOf="@+id/tv9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="转出即到余额"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:textColor="#A6A6A6"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    <View 
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <!-- 计算收益 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="26dp"
        android:paddingRight="22dp"
        android:focusable="true"
       	android:focusableInTouchMode="true"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="计算收益"
            android:textColor="#000000"
            android:gravity="center_vertical"
            />
        <!-- 计算器 -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/changepaypswd_edittext_bg" 
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/paymoney" 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="20000"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    />
                <TextView 
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text="元"
                    android:textColor="#D8D8D8"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <View 
              android:layout_width="30dp"
              android:layout_height="match_parent"  
              />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/changepaypswd_edittext_bg" 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/payday" 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="365"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    />
                <TextView 
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text="天"
                    android:textColor="#D8D8D8"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="预期收益为"
                android:textColor="#D8D8D8"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/jigetmoney" 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1728"
                android:textColor="#D8D8D8"
                android:textSize="18sp"
                android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="元"
                android:textColor="#D8D8D8"
                android:gravity="center_vertical"
                />
        </LinearLayout>
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    
    <View 
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <!-- 理财周期 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:paddingLeft="26dp"
        android:background="@color/white"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="理财周期"
            android:textColor="#000000"
            android:gravity="center_vertical"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey"
          />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="这个区域是图表形式的理财周期展示"
            android:gravity="center_vertical"
            android:textColor="#A6A6A6"
            />
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    
    <View 
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <!-- 转账说明 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:paddingLeft="26dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="转账说明"
            android:gravity="center_vertical"
            />
        <View 
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/divider_grey"
          />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv15" 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="每日限额转入/转出"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    />
                <TextView
                    android:id="@+id/text3" 
                    android:layout_toRightOf="@+id/tv15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="20,000元"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    />
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv16" 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="累计投资限额"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    />
                <TextView 
                    android:id="@+id/text4"
                    android:layout_toRightOf="@+id/tv16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="20,000"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    />
                 <TextView
                    android:layout_toRightOf="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="元"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv17" 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="投资时息通不可使用红包"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="目前支持转出到帐户余额，可通过资产页提现余额 "
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    
    <View 
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <!-- 产品介绍，保障 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:paddingLeft="26dp"
        android:background="@color/white"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="更多详情"
                android:gravity="center"
                />
            <ImageView 
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:src="@drawable/img_refresh_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>
        
        <View 
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/divider_grey" 
           />
          
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="安全保障"
                android:gravity="center"
                />
            <ImageView 
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:src="@drawable/img_refresh_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>
        
        <View 
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/divider_grey" 
           />
          
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="投资记录"
                android:gravity="center"
                />
            <ImageView 
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:src="@drawable/img_refresh_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>
        
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    <!-- 空白的地方 -->
    
    <View 
      android:layout_width="match_parent"
      android:layout_height="20dp"  
      />
    
</LinearLayout>
