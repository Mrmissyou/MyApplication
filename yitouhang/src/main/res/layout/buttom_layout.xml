<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/fristpager" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/fristpager_icon" 
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/corners_border"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_below="@id/fristpager_icon" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fristpager_tv"
            android:text="首页"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#A6A6A6"
            />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/financing" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/financing_icon" 
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/corners_border"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_below="@id/financing_icon" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/financingr_tv"
            android:text="理财"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#A6A6A6"
            />
    </RelativeLayout>
    
      <RelativeLayout
        android:id="@+id/myself" 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/myself_icon" 
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/corners_border"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_below="@id/myself_icon" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myself_tv"
            android:text="投资"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#A6A6A6"
            />
    </RelativeLayout>
    
    

</LinearLayout>
