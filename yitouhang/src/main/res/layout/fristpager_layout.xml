<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/barnner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >
        <com.laxiong.View.ChildViewPager 
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:id="@+id/childviewpager"
        	/>
        <LinearLayout
            android:id="@+id/layout_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/toutiao" 
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:text="财经头条"
            android:gravity="center"
            android:textColor="#A6A6A6"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/toutiao"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:text="这是一条十分重要的财经头条的消息。"
            android:singleLine="true"
            android:textColor="#D8D8D8"
            />
    </RelativeLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    
    <View 
      android:layout_marginTop="10dp" 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout 
            android:id="@+id/new_biao"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
            <ImageView
                android:id="@+id/imgs1" 
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/corners_border"
                android:layout_marginRight="5dp"
                />
            <TextView 
                android:id="@+id/tv1"
                android:layout_toRightOf="@+id/imgs1"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="20dp"
                android:text="新手标"
                android:gravity="center"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_below="@id/tv1"
                 android:layout_toRightOf="@+id/imgs1"
                 android:text="高达15%的年化，安心收益"
                />
            <ImageView 
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/tv1"
                android:layout_marginTop="20dp"
                android:background="@drawable/corners_border"
                />
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_refresh_arrow"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="22dp"
            />
        
        <RelativeLayout 
            android:id="@+id/time_xitong"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
             <ImageView
                android:id="@+id/imgs2" 
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/corners_border"
                android:layout_marginRight="5dp"
                />
            <TextView 
                android:id="@+id/tv2"
                android:layout_toRightOf="@+id/imgs2"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="20dp"
                android:text="时息通"
                android:gravity="center"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_below="@id/tv2"
                 android:layout_toRightOf="@+id/imgs2"
                 android:text="高达8%的年化，智能分散投资"
                />
            <ImageView 
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/tv2"
                android:layout_marginTop="20dp"
                android:background="@drawable/corners_border"
                />
            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_refresh_arrow"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="22dp"
            />
        
         <RelativeLayout
            android:id="@+id/gu_xibao" 
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
             <ImageView
                android:id="@+id/imgs3" 
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/corners_border"
                android:layout_marginRight="5dp"
                />
            <TextView 
                android:id="@+id/tv3"
                android:layout_toRightOf="@+id/imgs3"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="20dp"
                android:text="固息宝，定息"
                android:gravity="center"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_below="@id/tv3"
                 android:layout_toRightOf="@+id/imgs3"
                 android:text="灵活理财，安全保障"
                />
            <ImageView 
                android:layout_width="44dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/tv3"
                android:layout_marginTop="20dp"
                android:background="@drawable/corners_border"
                />
            <ImageView
                android:id="@+id/arrow3"
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_refresh_arrow"
                android:layout_centerVertical="true"
                android:layout_marginRight="22dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/light_grey"
        >
        <TextView 
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="已经有35535位聪明伙伴在壹投行理财(元)"
            android:gravity="center"
            android:textColor="@color/divider_grey"
            />
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="1,864,623,745"
            android:gravity="center"
            android:textColor="@color/divider_grey"
            />
    </LinearLayout>
    
    
    
</LinearLayout>
