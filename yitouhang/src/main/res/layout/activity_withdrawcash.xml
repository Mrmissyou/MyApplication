<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >

     <!-- 标题 -->
    <RelativeLayout
        android:id="@+id/rel1" 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_grey"
        >
        <!-- 返回箭头 -->
        <FrameLayout 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/back_layout"
            >
            <ImageView 
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/img_back"
                android:layout_gravity="center"
                />
        </FrameLayout>
         <TextView 
             android:id="@+id/withdrawcash"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
           	 android:layout_centerInParent="true"
             android:text="提现"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="17dp"
             />
         <TextView 
             android:id="@+id/jilu"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="记录"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="11dp"
             android:layout_alignParentRight="true"
             android:paddingRight="10dp"
             android:paddingLeft="10dp"
             />
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/title_grey"
        android:orientation="horizontal"
        >
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv1" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="提现金额"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32,856元"
                android:textColor="@color/white"
                android:layout_below="@id/tv1"
                />
        </RelativeLayout>
        
         <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <View 
               android:layout_width="match_parent"
               android:layout_height="2dp" 
               android:background="@color/white"
              />
             
        </RelativeLayout>
        
          <RelativeLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv2" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="招商银行"
                android:layout_alignParentRight="true"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尾号9970"
                android:textColor="@color/white"
                android:layout_below="@id/tv2"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:id="@+id/tv3" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="账户余额"
            android:gravity="center_vertical"
            android:textColor="#A6A6A6"
            />
        <TextView
            android:layout_marginLeft="10dp" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv3"
            android:text="322,186.85元"
            android:gravity="center_vertical"
            android:textColor="#A6A6A6"
            />
        <ImageView 
            android:id="@+id/notice"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/corners_border"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    
    
    
    
    <TextView 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="本次免费提现额度为22,638元,每笔提现不少于100元,若帐户余额少于100元,则需一次提现全部余额。"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#A6A6A6"
        />
    <!-- 提现金额 -->
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
         android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="提现金额"
            android:gravity="center_vertical"
            />
        <EditText 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入提现金额"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:text="元"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    
    <View 
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="手续费" 
               android:textColor="#A6A6A6"
               android:gravity="center_vertical"
               />
            <TextView 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="42.85" 
               android:textColor="#A6A6A6"
               android:gravity="center_vertical"
               android:layout_alignParentRight="true"
               />
        </RelativeLayout>
        
          <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="实际到账" 
               android:textColor="#A6A6A6"
               android:gravity="center_vertical"
               />
            <TextView 
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="2012.35" 
               android:gravity="center_vertical"
               android:layout_alignParentRight="true"
               />
        </RelativeLayout>
    </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    
    
    <!-- 按钮 -->
    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        >
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/nextbtn" 
            android:layout_width="288dp"
            android:layout_height="50dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:background="@drawable/button_red_corner_border"
            android:gravity="center"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/nextbtn" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账户资金安全由平安保险100%承保"
            android:textSize="12sp"
            android:textColor="#A6A6A6"
            android:gravity="center"
            />
        
    </RelativeLayout>
    

</LinearLayout>
