<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WaterDropView">
        <attr name="max_circle_radius" format="dimension"/>
        <attr name="min_circle_radius" format="dimension"/>
        <attr name="waterdrop_color" format="color"/>
        <attr name="topcircle_x" format="dimension"/>
        <attr name="topcircle_y" format="dimension"/>
        <attr name="bottomcircle_x" format="dimension"/>
        <attr name="bottomcircle_y" format="dimension"/>
    </declare-styleable>
    
     <declare-styleable name="CircleProgressView">
        <attr name="text" format="string" />
        <attr name="unit" format="string" />
        <attr name="showUnit" format="boolean" />
        <attr name="textColor" format="color" />
        <attr name="unitColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="spinColor" format="color" />
        <attr name="maxValue" format="dimension" />
        <attr name="barColor" format="color" />
        <attr name="barColor1" format="color" />
        <attr name="barColor2" format="color" />
        <attr name="barColor3" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="barWidth" format="dimension" />
        <attr name="spinSpeed" format="dimension" />
        <attr name="fillColor" format="color" />
        <attr name="spinBarLength" format="dimension" />
        <attr name="contourColor" format="color"/>
        <attr name="contourSize" format="dimension"/>
        <attr name="textScale" format="dimension" />
        <attr name="unitScale" format="dimension" />
    </declare-styleable>
    
   <!-- PatternView -->
   
   <declare-styleable name="PatternView">

        <!-- This is the maximum size the view will take in wrap_content mode. -->
        <attr name="maxSize" format="dimension" />
        <!-- The color of the circle. -->
        <attr name="circleColor" format="color" />
        <!-- Number of rows and columns in the matrix. -->
        <attr name="gridSize" format="integer" />
        <!-- The color of the path between the cells. -->
        <attr name="pathColor" format="color" />
    </declare-styleable>
     
   <!-- CricleImageView -->  
   <declare-styleable name="CircleImageView">  
        <attr name="border_width" format="dimension" />  
        <attr name="border_color" format="color" />  
    </declare-styleable>
   
</resources>
