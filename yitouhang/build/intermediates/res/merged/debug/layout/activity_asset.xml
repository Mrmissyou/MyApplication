<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <!-- 标题 -->
    <RelativeLayout
        android:id="@+id/rel1" 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_grey"
        >
        <!-- 返回箭头 -->
        <FrameLayout 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/back_layout"
            >
            <ImageView 
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/img_back"
                android:layout_gravity="center"
                />
        </FrameLayout>
         <TextView 
             android:id="@+id/assest"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
           	 android:layout_centerInParent="true"
             android:text="账户资产"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="17dp"
             />
         <TextView 
             android:id="@+id/said"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="提示"
             android:textColor="@color/white"
             android:gravity="center"
             android:textSize="11dp"
             android:layout_alignParentRight="true"
             android:paddingRight="10dp"
             android:paddingLeft="10dp"
             />
    </RelativeLayout>
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center"
        >
        <com.laxiong.View.CircularScaleView
            android:id="@+id/circularscaleview"
            android:layout_width="156dp"
            android:layout_height="156dp"
            />
        
    </RelativeLayout>
    
    <!-- 介绍 时息通 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >
        <View 
         android:id="@+id/view1"
         android:layout_width="6dp"
         android:layout_height="6dp"
         android:background="#A6A6A6"
         android:layout_centerVertical="true"
         />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="时息通"
            android:layout_toRightOf="@+id/view1"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_toLeftOf="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="20,000元"
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_marginLeft="10dp"
            android:id="@+id/see_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查看"
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:background="@drawable/grey_border"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >
        <View 
         android:id="@+id/view2"
         android:layout_width="6dp"
         android:layout_height="6dp"
         android:layout_centerVertical="true"
         />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="累计收益"
            android:layout_toRightOf="@+id/view2"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_toLeftOf="@+id/see_more1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="467.68元"
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_marginLeft="10dp"
            android:id="@+id/see_more1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="        "
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
    
    <!-- 介绍 固息宝 -->
    <RelativeLayout 
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >
        <View 
         android:id="@+id/view3"
         android:layout_width="6dp"
         android:layout_height="6dp"
         android:background="#D8D8D8"
         android:layout_centerVertical="true"
         />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="固息宝"
            android:layout_toRightOf="@+id/view3"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_toLeftOf="@+id/see_more3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="375,000元"
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_marginLeft="10dp"
            android:id="@+id/see_more3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查看"
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:background="@drawable/grey_border"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >
        <View 
         android:id="@+id/view4"
         android:layout_width="6dp"
         android:layout_height="6dp"
         android:layout_centerVertical="true"
         />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="累计收益"
            android:layout_toRightOf="@+id/view4"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_toLeftOf="@+id/see_more4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4267.68元"
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_marginLeft="10dp"
            android:id="@+id/see_more4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="        "
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
    
    <!-- 介绍 余额 -->
    <RelativeLayout 
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        >
        <View 
         android:id="@+id/view5"
         android:layout_width="6dp"
         android:layout_height="6dp"
         android:background="#BDBDBD"
         android:layout_centerVertical="true"
         />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="余额"
            android:layout_toRightOf="@+id/view5"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_toLeftOf="@+id/see_more5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="372,856元"
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            />
        
        <TextView 
            android:layout_marginLeft="10dp"
            android:id="@+id/see_more5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查看"
            android:gravity="center"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:background="@drawable/grey_border"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </RelativeLayout>
  
    

</LinearLayout>
