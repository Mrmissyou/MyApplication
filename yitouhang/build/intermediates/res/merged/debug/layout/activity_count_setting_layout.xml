<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    
    <include 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/white_title_head_layout"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="120dp"
	        android:orientation="vertical"
	        android:background="@drawable/count_setting_border"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="13dp"
	        android:layout_marginRight="13dp"
	        >
	        <RelativeLayout
	            android:id="@+id/count_setting" 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            >
	            <ImageView 
	                android:id="@+id/person_icon"
	                android:layout_width="40dp"
	                android:layout_height="40dp"
	                android:background="@color/light_grey"
	                android:layout_marginLeft="20dp"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="40dp"
	                android:layout_toRightOf="@+id/person_icon"
	                android:text="用户名"
	                android:gravity="center"
	                android:textColor="@color/white"
	                android:layout_marginLeft="5dp"
	                />
	        </RelativeLayout>
	        
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/white"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            />
	        
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            >
	            <TextView 
	                android:layout_marginTop="10dp"
	                android:id="@+id/tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="工商银行"
	                android:layout_marginLeft="20dp"
	                android:textColor="@color/white"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_below="@id/tv"
	                android:text="8738*************6776"
	                android:gravity="center"
	                android:layout_marginLeft="20dp"
	                android:textColor="@color/white"
	                />
	            <!-- 小箭头 -->
				
				    <ImageView
	                	android:layout_width="6dp"
	                	android:layout_height="12dp"
	                	android:layout_alignParentRight="true"
	                	android:layout_centerVertical="true"
	                	android:layout_marginRight="14dp"
	                	android:src="@drawable/img_refresh_arrow"
	                	/>
	            
	        </RelativeLayout>
	    </LinearLayout>
    </RelativeLayout>
    <!-- 四个按钮 -->
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imgs1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corners_border" />

            <TextView
                android:layout_marginTop="3dp" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgs1"
                android:gravity="center"
                android:text="官方数据"
                android:textSize="11dp" />
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            
            <ImageView
                android:id="@+id/imgs2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corners_border" />
            
            <TextView 
                android:layout_marginTop="3dp" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgs2"
                android:text="安全保障"
                android:textSize="11dp"
                android:gravity="center"
                />
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imgs3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corners_border" />
            
            <TextView 
                android:layout_marginTop="3dp" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgs3"
                android:text="帮助中心"
                android:textSize="11dp"
                android:gravity="center"
                />

        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imgs4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corners_border" />
            
            <TextView
                android:layout_marginTop="3dp" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgs4"
                android:text="关于我们"
                android:textSize="11dp"
                android:gravity="center"
                />

        </RelativeLayout>
    </LinearLayout>
    
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    <View 
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <!-- 消息等 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:background="@color/white"
        >
        <RelativeLayout 
            android:id="@+id/message"
        	android:layout_width="match_parent"
       	 	android:layout_height="40dp">
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:text="消息"
        	    android:gravity="center"
        	    />
        	<ImageView 
        	    android:id="@+id/arrows1"
        	    android:layout_width="6dp"
        	    android:layout_height="12dp"
        	    android:src="@drawable/img_refresh_arrow"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="20dp"
        	    />
        	
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:layout_toLeftOf="@+id/arrows1"
        	    android:text="3条未读"
        	    android:layout_marginRight="5dp"
        	    android:gravity="center"
        	    android:textSize="11dp"
        	    />
    	</RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey"
         />
        
        <RelativeLayout 
        	android:layout_width="match_parent"
       	 	android:layout_height="40dp">
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:text="风险偏好"
        	    android:gravity="center"
        	    />
        	<ImageView 
        	    android:id="@+id/arrows2"
        	    android:layout_width="6dp"
        	    android:layout_height="12dp"
        	    android:src="@drawable/img_refresh_arrow"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="20dp"
        	    />
        	
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:layout_toLeftOf="@+id/arrows2"
        	    android:text="未评估"
        	    android:layout_marginRight="5dp"
        	    android:gravity="center"
        	    android:textSize="11dp"
        	    />
    	</RelativeLayout>
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    <View 
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    <!-- 密码管理的 -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/pswdControl" 
        	android:layout_width="match_parent"
       	 	android:layout_height="40dp">
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:text="密码管理"
        	    android:gravity="center"
        	    />
        	<ImageView 
        	    android:layout_width="6dp"
        	    android:layout_height="12dp"
        	    android:src="@drawable/img_refresh_arrow"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="20dp"
        	    />
    	</RelativeLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey"
         />
        
        <!-- 联系客服 -->
        <RelativeLayout 
            android:id="@+id/connectKefu"
        	android:layout_width="match_parent"
       	 	android:layout_height="40dp">
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:text="联系客服"
        	    android:gravity="center"
        	    />
        	<ImageView 
        	    android:layout_width="6dp"
        	    android:layout_height="12dp"
        	    android:src="@drawable/img_refresh_arrow"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="20dp"
        	    />
    	</RelativeLayout>
    	
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_grey"
         />
        
        <RelativeLayout 
        	android:layout_width="match_parent"
       	 	android:layout_height="40dp">
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:text="版本更新"
        	    android:gravity="center"
        	    />
        	<ImageView 
        	    android:id="@+id/arrows3"
        	    android:layout_width="6dp"
        	    android:layout_height="12dp"
        	    android:src="@drawable/img_refresh_arrow"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="20dp"
        	    />
        	
        	<TextView 
        	    android:layout_width="wrap_content"
        	    android:layout_height="match_parent"
        	    android:layout_toLeftOf="@+id/arrows3"
        	    android:text="V-2.7.2"
        	    android:layout_marginRight="5dp"
        	    android:gravity="center"
        	    android:textSize="12sp"
        	    />
    	</RelativeLayout>
    </LinearLayout>
    <View 
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/divider_grey"  
      />
    
    
    
    

</LinearLayout>
