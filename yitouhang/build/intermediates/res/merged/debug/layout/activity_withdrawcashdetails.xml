<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    <include layout="@layout/white_title_head_layout"/>
    <!-- 提现的进度动态图 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="@color/white"
        >
        <TextView 
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="这个区域是对提现结果的图形化展示"
            android:gravity="center"
            android:textColor="#A6A6A6"
            />
        <TextView 
            android:layout_below="@id/icon"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="提现成功"
            android:gravity="center"
             android:textColor="#A6A6A6"
            />
    </RelativeLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    
    
    
    
    
    <View 
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="提现金额"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2,186.85"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="手续费"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="21.85"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="实际到账"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2,086.85"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="银行卡号"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="招商银行(尾号9970)"
                android:textColor="#A6A6A6"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    
    
    <!-- 提现显示 -->
    <View 
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    <LinearLayout
        android:layout_height="94dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <LinearLayout 
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View 
              android:layout_marginTop="20dp"
              android:layout_width="6dp"
              android:layout_height="6dp"
              android:background="@drawable/button_red_corner_border"  
              />
            <RelativeLayout 
              android:layout_width="6dp"
              android:layout_height="0dp"
              android:layout_weight="1" 
              > 
              <View 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/light_grey"  
                android:layout_centerInParent="true" 
                />
            </RelativeLayout>
            <View 
              android:layout_marginBottom="20dp"
              android:layout_width="6dp"
              android:layout_height="6dp"
              android:background="@color/light_grey"  
              />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="提现申请已提交"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    android:gravity="center_vertical"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2016-03-20 16:28"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="预计到账时间"
                    android:textSize="12sp"
                    android:textColor="#A6A6A6"
                    android:gravity="center_vertical"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="预计1-2个工作日到账"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView 
          	android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="288dp"
            android:layout_height="43dp"
            android:text="完成"
            android:textColor="@color/white"
            android:background="@drawable/button_red_corner_border"
            />
    </RelativeLayout>
    
</LinearLayout>
