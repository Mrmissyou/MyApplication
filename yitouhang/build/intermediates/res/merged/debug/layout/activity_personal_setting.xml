<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >
    
     <include
        android:id="@+id/titlelayout" 
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/white_title_head_layout"/>
     
     <View 
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
     
     <LinearLayout
         android:id="@+id/linea1"
         android:layout_width="match_parent"
         android:layout_height="156dp"
         android:orientation="vertical"
         android:paddingLeft="20dp"
         android:background="@color/white"
         >
         <RelativeLayout
             android:id="@+id/personIcon" 
             android:layout_width="match_parent"
             android:layout_height="70dp"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="头像"
                 android:gravity="center"
                 />
             <ImageView
                 android:id="@+id/use_face" 
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:background="@drawable/corners_border"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="15dp"
                 />
         </RelativeLayout>
         
         <View 
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/divider_grey"
             />
         
         <RelativeLayout
             android:id="@+id/nameSetting" 
             android:layout_width="match_parent"
             android:layout_height="40dp"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="昵称"
                 android:gravity="center"
                 />
             <ImageView 
                 android:layout_width="6dp"
                 android:layout_height="12dp"
                 android:src="@drawable/img_refresh_arrow"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="15dp"
                 />
         </RelativeLayout>
         
         <View 
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/divider_grey"
             />
         
         <RelativeLayout
             android:id="@+id/addressSetting" 
             android:layout_width="match_parent"
             android:layout_height="40dp"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="常用地址"
                 android:gravity="center"
                 />
             <ImageView 
                 android:layout_width="6dp"
                 android:layout_height="12dp"
                android:src="@drawable/img_refresh_arrow"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="15dp"
                 />
         </RelativeLayout>
     </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       />
     
     
     <!-- 认证的 -->
     	<View 
	       android:layout_marginTop="10dp"
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:background="@color/divider_grey"  
	       />
         <RelativeLayout
             android:id="@+id/true_name"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:paddingLeft="20dp"
             android:background="@color/white"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="实名认证"
                 android:gravity="center"
                 />
             <ImageView 
                 android:id="@+id/arrows1"
                 android:layout_width="6dp"
                 android:layout_height="12dp"
                 android:src="@drawable/img_refresh_arrow"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="15dp"
                 />
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="未认证"
                 android:layout_toLeftOf="@+id/arrows1"
                 android:gravity="center"
                 android:layout_marginRight="5dp"
                 android:textSize="9dp"
                 />
             
         </RelativeLayout>
         <View 
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:background="@color/divider_grey"  
	       />
         
         
         <!-- 未认证时的，绑定手机 -->
         <View 
	       android:layout_marginTop="10dp"
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:background="@color/divider_grey"  
	       />
          <RelativeLayout 
             android:id="@+id/phoneBind"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:paddingLeft="20dp"
             android:background="@color/white"
             android:visibility="visible"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="绑定手机"
                 android:gravity="center"
                 />
             <ImageView 
                 android:id="@+id/arrows2"
                 android:layout_width="6dp"
                 android:layout_height="12dp"
                 android:src="@drawable/img_refresh_arrow"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="15dp"
                 />
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="189********2203"
                 android:layout_toLeftOf="@+id/arrows2"
                 android:gravity="center"
                 android:layout_marginRight="5dp"
                 android:textSize="9dp"
                 />
         </RelativeLayout>
         <View 
	       android:layout_width="match_parent"
	       android:layout_height="1dp"
	       android:background="@color/divider_grey"  
	       />
          
          
    <!-- 认证成功的，绑定手机号 -->
    
    <View 
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       android:visibility="gone"
       />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="122dp"
         android:orientation="vertical"
         android:paddingLeft="20dp"
         android:background="@color/white"
         android:visibility="gone"
         >
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="40dp"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="绑定手机"
                 android:gravity="center"
                 />
             <ImageView 
                 android:id="@+id/arrows3"
                 android:layout_width="10dp"
                 android:layout_height="20dp"
                 android:background="@color/divider_grey"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="15dp"
                 />
             
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="189********2203"
                 android:layout_toLeftOf="@+id/arrows3"
                 android:gravity="center"
                 android:layout_marginRight="5dp"
                 android:textSize="9dp"
                 />
             
         </RelativeLayout>
         
         <View 
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/divider_grey"
             />
         
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="40dp"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="真实姓名"
                 android:gravity="center"
                 />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"
                 android:gravity="center"
                 android:text="WangKing"
                 android:textSize="9dp"
                 />
         </RelativeLayout>
         
         <View 
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/divider_grey"
             />
         
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="40dp"
             >
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="省份证"
                 android:gravity="center"
                 />
            <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"
                 android:gravity="center"
                 android:text="340827**********4575"
                 android:textSize="9dp"
                 />
         </RelativeLayout>
     </LinearLayout>
    <View 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/divider_grey"  
       android:visibility="gone"
       />
     
     
     <RelativeLayout 
         android:layout_weight="1"
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:gravity="center_horizontal"
         >
         <TextView
         android:id="@+id/backbtn" 
         android:gravity="center"
         android:layout_width="280dp"
         android:layout_height="40dp"
         android:text="退出"
         android:textColor="@color/white"
         android:background="@drawable/button_red_corner_border"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="20dp"
         />
     </RelativeLayout>

</LinearLayout>
